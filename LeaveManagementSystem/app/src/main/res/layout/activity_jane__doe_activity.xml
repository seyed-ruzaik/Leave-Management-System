<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redwall"
    tools:context=".Jane_Doe_activity">

    <ImageView
        android:id="@+id/imageView_janedoe"
        android:layout_width="283dp"
        android:layout_height="230dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/janedoe" />

    <TextView
        android:id="@+id/textView2_janedoe"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/custom_text"
        android:gravity="center"
        android:text="Casual Leaves Remaining: 7"
        android:textAlignment="center"
        android:textColor="#F6F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_janedoe" />

    <TextView
        android:id="@+id/textView6_janedoe"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/custom_text"
        android:gravity="center"
        android:text="Medical Leaves Remaining: 7"
        android:textAlignment="center"
        android:textColor="#F6F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_janedoe" />

    <TextView
        android:id="@+id/textView7_janedoe"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/custom_text"
        android:gravity="center"
        android:text="Annual Leaves Remaining: 14"
        android:textAlignment="center"
        android:textColor="#F6F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6_janedoe" />

    <Button
        android:id="@+id/btn_apply_jane"
        android:layout_width="191dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:text="Apply For A Leave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7_janedoe" />

</androidx.constraintlayout.widget.ConstraintLayout>